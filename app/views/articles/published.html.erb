      <th scope="col">Description</th>
      <th scope="col">Date</th>
      <th scope="col">Day</th>
    </tr>
   
   <%  @articles.each do |article| %>
    <tr>
      <div class="badge bg-primary text-wrap" style="width: 6rem;">
